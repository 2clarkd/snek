curdir=`pwd`
dir=`dirname $0`
cd "$dir/.."

case $# in
    2)
    ;;
    *)
	echo "usage: $0 <build-dir> <target>" 1>&2
	exit 1
	;;
esac

build="$1"
builddir=`echo $build | sed 's/^[^:]*://'`
echo builddir "$builddir"

target="$2"

rsync -Ravz --delete `git ls-files` "$build"

ssh imac-remote "cd '$builddir'/posix && make"

rsync -avz "$build"/posix/snek "$curdir"/"$target"
