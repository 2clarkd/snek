#!/bin/sh

HEX="@SHAREDIR@/snek-uno-@SNEK_VERSION@.hex"
PORT=/dev/ttyACM0

mode=arg

for i in "$@"; do
    case "$mode" in
	arg)
	    case "$i" in
		-port|--port)
		    mode=port
		    ;;
		-hex|--hex)
		    mode=hex
		    ;;
		*)
		      echo "Usage: $0 {-port $PORT} {-hex snek-uno.hex}" 1>&2
		      exit 1
		      ;;
	    esac
	    ;;
	port)
	    PORT="$i"
	    mode=arg
	    ;;
	hex)
	    HEX="$i"
	    mode=arg
	    ;;
    esac
done

avrdude -pATMEGA328P -carduino -P$PORT -b115200 -D -U flash:w:"${HEX}":i
