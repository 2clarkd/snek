#!/bin/sh

SHAREDIR="@SHAREDIR@"

SNEKITSYBITSY="$SHAREDIR/itsybitsy-snek-@SNEK_VERSION@.hex"

action="fuseload"

ISP=usbtiny

mode=arg

verify=""

for i in "$@"; do
    case "$mode" in
	arg)
	    case "$i" in
		fuse|load|fuseload)
		    action="$i"
		    ;;
		-isp|--isp)
		    mode=isp
		    ;;
		-hex|--hex)
		    mode=hex
		    ;;
		-quick)
		    verify="-V"
		    ;;
		*)
		      echo "Usage: $0 {-isp usbtiny} {-isp avrisp2} {-hex itsybitsy-snek.hex} {fuseload|load|fuse}" 1>&2
		      exit 1
		      ;;
	    esac
	    ;;
	isp)
	    ISP="$i"
	    mode=arg
	    ;;
	hex)
	    SNEKITSYBITSY="$i"
	    mode=arg
	    ;;
    esac
done

FUSES="-U lfuse:w:0xff:m -U hfuse:w:0x91:m -U efuse:w:0xfd:m"

case "$action" in
    fuse)
	avrdude $verify -c $ISP -p m32u4 $FUSES
	;;
    fuseload)
	avrdude $verify -c $ISP -p m32u4 $FUSES -U flash:w:"${SNEKITSYBITSY}"
	;;
    load)
	avrdude $verify -c $ISP -p m32u4 -U flash:w:"${SNEKITSYBITSY}"
	;;
esac
